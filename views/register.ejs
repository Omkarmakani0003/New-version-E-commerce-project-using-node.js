    <style>
        .auth-wrapper {
            min-height: calc(100vh - 200px); 
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-btn {
            width: 100%;
            text-align: left;
        }

        .social-btn i {
            font-size: 18px;
            margin-right: 10px;
        }
    </style>
</head>

<body>

<!-- ================= HEADER / NAVBAR ================= -->
<!-- USE SAME NAVBAR FROM index.html -->
<!-- ================= END NAVBAR ================= -->


<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-0">
                <a class="breadcrumb-item text-dark" href="index.html">Home</a>
                <span class="breadcrumb-item active">Register</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->


<!-- Register Start -->
<div class="container-fluid auth-wrapper">
    <div class="row px-xl-5 justify-content-center w-100">
        <div class="col-lg-6 col-md-8">
            <div class="bg-light p-30">
                <h3 class="mb-4 text-center">Create Your Account</h3>

                <form action="/register" method="POST">
                    <div class="form-group">
                        <label>Full Name</label>
                        <% if (error && error.length> 0) {
                            error.forEach(function(e) {
                            if(e.path == 'fullName'){ %>
                                <p class="text-danger">
                                    <%= e.msg %>
                                </p>
                        <% } }) } %>
                        <input type="text" class="form-control" name="fullName" value="<%= oldInput[0] ? oldInput[0].fullName : '' %>" placeholder="John Doe">
                    </div>

                    <div class="form-group">
                        <label>Email Address</label>
                        <% if (error && error.length> 0) {
                            error.forEach(function(e) {
                            if(e.path == 'email'){ %>
                                <p class="text-danger">
                                    <%= e.msg %>
                                </p>
                        <% } }) } %>
                        <input type="email" class="form-control" name="email" value="<%= oldInput[0] ? oldInput[0].email : '' %>" placeholder="example@email.com">
                    </div>
                    <div class="form-group">
                        <label>contact</label>
                        <input type="number" class="form-control" name="contact" value="<%= oldInput[0] ? oldInput[0].contact : '' %>" placeholder="Enter your Contact">
                    </div>  
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="address" value="<%= oldInput[0] ? oldInput[0].address : '' %>" placeholder="example@email.com">
                    </div>  
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" name="city" value="<%= oldInput[0] ? oldInput[0].city : '' %>" placeholder="Enter your city">
                    </div> 
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" class="form-control" name="state" value="<%= oldInput[0] ? oldInput[0].state : '' %>" placeholder="Enter your state">
                    </div>  
                    <div class="form-group">
                        <label>Password</label>
                        <% if (error && error.length> 0) {
                            error.forEach(function(e) {
                            if(e.path == 'password'){ %>
                                <p class="text-danger">
                                    <%= e.msg %>
                                </p>
                        <% } }) } %>
                        <input type="password" class="form-control" name="password" placeholder="********">
                    </div>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <% if (error && error.length> 0) {
                            error.forEach(function(e) {
                            if(e.path == 'confirm_password'){ %>
                                <p class="text-danger">
                                    <%= e.msg %>
                                </p>
                        <% } }) } %>
                        <input type="password" class="form-control" name="confirm_password" placeholder="********">
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" name="agreement" id="terms">
                            <label class="custom-control-label" for="terms">
                                I agree to the <a href="#">Terms & Conditions</a>
                            </label>
                            <% if (error && error.length> 0) {
                            error.forEach(function(e) {
                            if(e.path == 'agreement'){ %>
                                <p class="text-danger">
                                    <%= e.msg %>
                                </p>
                            <% } }) } %>    
                        </div>
                    </div>

                    <button class="btn btn-primary btn-block py-2 mb-3" type="submit">
                        Create Account
                    </button>
                </form>

                <div class="text-center mt-4">
                    <small>
                        Already have an account?
                        <a href="/login">Login here</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register End -->


