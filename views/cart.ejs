<%- include('layouts/header') %>

        <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="cart-table table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark cart-header">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle" id="rowCount">
                        <% if(cartItems){ 
                            cartItems.forEach((cart) => {
                        %>
                        <tr id="cart_<%= cart._id %>">
                            <td class="align-middle py-2 "><a href="/product-detail/<%= cart.items[0].product_id.slug %>" class="text-dark"><img src="<%= cart.items[0].product_id.images[0].url[0] %>" class="mr-3" alt="" style="width: 50px;"><%= cart.items[0].product_id.product_name %></a></td>
                            <td class="align-middle py-2 "><span class="cart-mobile" style="display: none;">Price : </span>Rs.<%= cart.items[0].product_id.price - cart.items[0].product_id.discount %></td>
                            <td class="align-middle py-2 ">
                                <span class="cart-mobile" style="display: none;">Quantity : </span>
                                <div class="input-group quantity" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus" data-id="<%= cart._id %>">
                                        <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="<%= cart.quantity %>">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus" data-id="<%= cart._id %>">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle amount py-2 " id="total_<%= cart._id %>"><span class="cart-mobile" style="display: none;">Total : </span>Rs.<%= cart.total * cart.quantity %></td>
                            <td class="align-middle py-2"><button class="btn btn-sm btn-danger" onclick="cartRemove('<%= cart._id %>')">Remove Cart</button></td>
                        </tr>
                        <% })} %>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                           <% let cartTotal = 0;
                              let shipping = 0;
                           if(cartItems){ cartItems.forEach((cart) => { 
                            cart.items.forEach((item) => { 
                                cartTotal += (item.product_id.price - item.product_id.discount) * cart.quantity;
                                shipping += item.product_id.shipping_price;
                            }); 
                            })}%>
                            <h6 id="subTotal">Rs. <%= cartTotal %></h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium" id="shipping">Rs. <%= shipping %></h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5 id="Total">Rs. <%= cartTotal + shipping %></h5>
                        </div>
                        <a href="/checkout" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('layouts/footer') %>