<%- include('layouts/header') %>
    <style>
        .auth-wrapper {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-btn {
            width: 100%;
            text-align: left;
        }

        .social-btn i {
            font-size: 18px;
            margin-right: 10px;
        }
    </style>
</head>

<body>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-0">
                <a class="breadcrumb-item text-dark" href="index.html">Home</a>
                <span class="breadcrumb-item active">Login</span>
            </nav>
        </div>
    </div>
</div>


<div class="container-fluid auth-wrapper">
    <div class="row px-xl-5 justify-content-center w-100">
        <div class="col-lg-5 col-md-7">
            <div class="bg-light p-30">
                <h3 class="mb-4 text-center">Login to Your Account</h3>
                <% if (success && success.length > 0) { success.forEach(function(e) { %>
                    <div class="alert alert-success"><%= e %></div>
                <% } ) }  %>
                <% if (error && error.length > 0) { error.forEach(function(e) { %>
                    <div class="alert alert-danger"><%= e %></div>
                <% } ) }  %>
                <form action="/user-login" method="POST">
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" name="email" class="form-control" placeholder="example@email.com">
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" placeholder="********">
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="remember">
                            <label class="custom-control-label" for="remember">Remember me</label>
                        </div>
                        <a href="/email-verification">Forgot password?</a>
                    </div>

                    <button class="btn btn-primary btn-block py-2 mb-3">
                        Login
                    </button>
                </form>

                <div class="text-center mt-4">
                    <small>
                        Donâ€™t have an account?
                        <a href="/user-register">Register now</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layouts/footer') %>